@model IEnumerable<NARA20241103.Models.Fiador>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro De Fiadores</h1>

<p>
    <a asp-action="Create">Nuevo Fiador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correlativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DineroFiado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correlativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DineroFiado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFiador">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFiador">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFiador">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
