@model NARA20241103.Models.Fiador

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h5>Datos Del Fiador</h5>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdFiador" />

    <!-- FILA #1 -->
    <div class="row">

        <div class="form-group col-md-4">
            <label asp-for="Fecha" class="control-label"></label>
            <input asp-for="Fecha" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="Correlativo" class="control-label"></label>
            <input asp-for="Correlativo" class="form-control" />
            <span asp-validation-for="Correlativo" class="text-danger"></span>
        </div>

    </div>


    <!-- FILA #2 -->
    <div class="">

        <div class="form-group col-md-5">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group col-md-2">
            <label asp-for="DineroFiado" class="control-label"></label>
            <input asp-for="DineroFiado" class="form-control" />
            <span asp-validation-for="DineroFiado" class="text-danger"></span>
        </div>

    </div>

    <!-- VISTA PARTIAL -->
    <br />    <h5>Datos Del Familiar</h5>
    <div class="row row-cols-md-12">
        @await Html.PartialAsync("_DetalleFamiliarees", Model.DetalleFamiliares)
    </div>



    <!-- BOTONES -->
    <div class="row">

        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-primary" />
            <a class="btn btn-primary" asp-action="Index">Cancelar</a>

        </div>

    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
